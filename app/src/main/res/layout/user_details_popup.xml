<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="733dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="689dp">

            <RelativeLayout
                android:layout_width="374dp"
                android:layout_height="685dp"
                android:layout_centerHorizontal="true"
                android:padding="25dp">

                <TextView
                    android:id="@+id/new_contact_textViewID"
                    android:layout_width="304dp"
                    android:layout_height="43dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="52dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/new_contact"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/firstNameEditTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_contact_textViewID"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/lastNameEditTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstNameEditTextID"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="17dp"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/countrySpinnerID"
                    android:layout_width="356dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/lastNameEditTextID"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="18dp" />

                <EditText
                    android:id="@+id/phoneEditTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countrySpinnerID"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="@string/enter_phone"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/emailEditTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneEditTextID"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="-22dp"
                    android:ems="10"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress" />

                <RadioGroup
                    android:id="@+id/genderGroupID"
                    android:layout_width="188dp"
                    android:layout_height="68dp"
                    android:layout_below="@+id/emailEditTextID"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="71dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/maleRadioButtonID"
                            android:layout_width="77dp"
                            android:layout_height="69dp"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/femaleRadioButtonID"
                            android:layout_width="55dp"
                            android:layout_height="69dp"
                            android:layout_weight="1"
                            android:text="@string/female" />
                    </LinearLayout>
                </RadioGroup>

                <Button
                    android:id="@+id/saveButtonID"
                    android:layout_width="105dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/genderGroupID"
                    android:layout_alignEnd="@+id/genderGroupID"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="-55dp"
                    android:text="@string/save" />

                <Button
                    android:id="@+id/cancelButtonPopUpId"
                    android:layout_width="110dp"
                    android:layout_height="59dp"
                    android:layout_below="@+id/genderGroupID"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="35dp"
                    android:layout_toStartOf="@+id/saveButtonID"
                    android:text="@string/cancel" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>