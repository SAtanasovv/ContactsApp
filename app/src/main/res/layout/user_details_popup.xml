<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="642dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="647dp"
                android:layout_centerHorizontal="true"
                android:padding="25dp">

                <TextView
                    android:id="@+id/new_contact_text_user_details_id"
                    android:layout_width="304dp"
                    android:layout_height="43dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="52dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/new_contact"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/first_name_user_details_id"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_contact_text_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="25dp"
                    android:ems="10"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/last_name_user_details_id"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_name_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="25dp"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/country_spiner_user_details_id"
                    android:layout_width="298dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/last_name_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="25dp" />

                <EditText
                    android:id="@+id/phone_number_user_details_id"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/country_spiner_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:ems="10"
                    android:hint="@string/enter_phone"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/email_user_details_id"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_number_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:ems="10"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress" />

                <RadioGroup
                    android:id="@+id/gender_group_user_details_id"
                    android:layout_width="253dp"
                    android:layout_height="64dp"
                    android:layout_below="@+id/email_user_details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male_radioBtn_user_details_id"
                            android:layout_width="112dp"
                            android:layout_height="match_parent"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/female_user_details_id"
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:text="@string/female" />
                    </LinearLayout>
                </RadioGroup>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>