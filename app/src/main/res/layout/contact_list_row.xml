<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContactlistRowID"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="376dp"
        android:layout_height="94dp"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/fullNameTextViewID"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/contact_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ponenumberTextViewID"
                android:layout_width="228dp"
                android:layout_height="33dp"
                android:layout_below="@+id/fullNameTextViewID"
                android:text="TextView" />

            <TableRow
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"

                android:orientation="horizontal">


                <Button
                    android:id="@+id/editButtonID"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:backgroundTint="@color/editColorAccent"
                    android:paddingHorizontal="150dp" />

                <Button
                    android:id="@+id/deleteButtonID"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_delete" />
            </TableRow>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>