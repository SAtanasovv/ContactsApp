<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id                                                                      ="@+id/cardViewContactlistRowID"
        style                                                                           ="@style/Widget.AppCompat.ButtonBar"
        android:layout_width                                                            ="380dp"
        android:layout_height                                                           ="170dp"
        android:padding                                                                 ="30dp"
        app:layout_constraintBottom_toBottomOf                                          ="parent"
        app:layout_constraintEnd_toEndOf                                                ="parent"
        app:layout_constraintHorizontal_bias                                            ="0.64"
        app:layout_constraintStart_toStartOf                                            ="parent"
        app:layout_constraintTop_toTopOf                                                ="parent"
        app:layout_constraintVertical_bias                                              ="1.0">


        <RelativeLayout
            android:layout_width                                                        ="match_parent"
            android:layout_height                                                       ="match_parent"
            android:padding                                                             ="15dp">

            <TextView
                android:id                                                              ="@+id/full_name_listrow_id"
                android:layout_width                                                    ="203dp"
                android:layout_height                                                   ="56dp"
                android:layout_alignParentStart                                         ="true"
                android:layout_alignParentBottom                                        ="true"
                android:layout_marginStart                                              ="28dp"
                android:layout_marginBottom                                             ="53dp"
                android:paddingBottom                                                   ="10dp"
                android:text                                                            ="@string/contact_name"
                android:textSize                                                        ="18sp" />

            <TextView
                android:id                                                              ="@+id/phonenumber_listrow_id"
                android:layout_width                                                    ="178dp"
                android:layout_height                                                   ="31dp"
                android:layout_alignParentStart                                         ="true"
                android:layout_alignParentBottom                                        ="true"
                android:layout_marginStart                                              ="29dp"
                android:layout_marginBottom                                             ="25dp" />

            <TableRow
                android:layout_width                                                    ="103dp"
                android:layout_height                                                   ="wrap_content"
                android:layout_below                                                    ="@+id/phonenumber_listrow_id"
                android:layout_alignParentEnd                                           ="true"
                android:layout_marginTop                                                ="-106dp"
                android:layout_marginEnd                                                ="8dp"
                android:orientation                                                     ="horizontal">


                <Button
                    android:id                                                          ="@+id/edit_button_listrow_id"
                    style                                                               ="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width                                                ="50dp"
                    android:layout_height                                               ="wrap_content"
                    android:layout_marginEnd                                            ="10dp"
                    android:background                                                  ="@android:drawable/ic_menu_edit"
                    android:backgroundTint                                              ="@color/editColorAccent"
                    android:paddingHorizontal                                           ="150dp" />

                <Button
                    android:id                                                          ="@+id/delete_button_listrow_id"
                    style                                                               ="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width                                                ="50dp"
                    android:layout_height                                               ="wrap_content"
                    android:background                                                  ="@android:drawable/ic_delete" />
            </TableRow>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>