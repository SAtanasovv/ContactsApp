<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width                                                        ="match_parent"
    android:layout_height                                                       ="match_parent"
    tools:context                                                               =".View.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width                                                    ="match_parent"
        android:layout_height                                                   ="wrap_content"
        app:layout_constraintBottom_toBottomOf                                  ="parent"
        app:layout_constraintEnd_toEndOf                                        ="parent"
        app:layout_constraintHorizontal_bias                                    ="0.0"
        app:layout_constraintStart_toStartOf                                    ="parent"
        app:layout_constraintTop_toTopOf                                        ="parent"
        app:layout_constraintVertical_bias                                      ="0.447">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width                                                ="match_parent"
            android:layout_height                                               ="265dp">

            <TextView
                android:id="@+id/name_details_id"
                android:layout_width                                            ="202dp"
                android:layout_height                                           ="35dp"
                android:layout_marginStart                                      ="32dp"
                android:padding                                                 ="5dp"
                android:textSize                                                ="18sp"
                app:layout_constraintBaseline_toBaselineOf                      ="@+id/name_details_text_id"
                app:layout_constraintEnd_toEndOf                                ="parent"
                app:layout_constraintHorizontal_bias                            ="0.0"
                app:layout_constraintStart_toEndOf                              ="@+id/name_details_text_id" />

            <TextView
                android:id ="@+id/phone_details_id"
                android:layout_width                                            ="206dp"
                android:layout_height                                           ="30dp"
                android:layout_marginStart                                      ="4dp"
                android:textSize                                                ="18sp"
                app:layout_constraintBaseline_toBaselineOf                      ="@+id/phone_number_details_text_id"
                app:layout_constraintEnd_toEndOf                                ="parent"
                app:layout_constraintHorizontal_bias                            ="0.255"
                app:layout_constraintStart_toEndOf                              ="@+id/phone_number_details_text_id" />

            <TextView
                android:id="@+id/email_details_id"
                android:layout_width                                            ="211dp"
                android:layout_height                                           ="28dp"
                android:layout_marginStart                                      ="40dp"
                android:textSize                                                ="18sp"
                app:layout_constraintBaseline_toBaselineOf                      ="@+id/email_details_text_id"
                app:layout_constraintEnd_toEndOf                                ="parent"
                app:layout_constraintHorizontal_bias                            ="0.358"
                app:layout_constraintStart_toEndOf                              ="@+id/email_details_text_id" />

            <TextView
                android:id="@+id/gender_details_id"
                android:layout_width                                            ="wrap_content"
                android:layout_height                                           ="wrap_content"
                android:layout_marginEnd                                        ="156dp"
                android:textSize                                                ="18sp"
                app:layout_constraintBaseline_toBaselineOf                      ="@+id/gender_details_text_id"
                app:layout_constraintEnd_toEndOf                                ="parent"
                app:layout_constraintHorizontal_bias                            ="0.714"
                app:layout_constraintStart_toEndOf                              ="@+id/gender_details_text_id" />

            <TextView
                android:id="@+id/country_details_id"
                android:layout_width                                            ="210dp"
                android:layout_height                                           ="28dp"
                android:layout_marginStart                                      ="36dp"
                android:textSize                                                ="18sp"
                app:layout_constraintBaseline_toBaselineOf                      ="@+id/country_details_text_id"
                app:layout_constraintEnd_toEndOf                                ="parent"
                app:layout_constraintHorizontal_bias                            ="0.37"
                app:layout_constraintStart_toEndOf                              ="@+id/country_details_text_id" />

            <TextView
                android:id="@+id/name_details_text_id"
                android:layout_width                                            ="69dp"
                android:layout_height                                           ="wrap_content"
                android:layout_marginStart                                      ="48dp"
                android:layout_marginBottom                                     ="220dp"
                android:ems                                                     ="10"
                android:text                                                    ="@string/name"
                android:textSize                                                ="14sp"
                app:layout_constraintBottom_toBottomOf                          ="parent"
                app:layout_constraintStart_toStartOf                            ="parent" />

            <TextView
                android:id="@+id/phone_number_details_text_id"
                android:layout_width                                            ="101dp"
                android:layout_height                                           ="21dp"
                android:layout_marginStart                                      ="48dp"
                android:layout_marginBottom                                     ="168dp"
                android:ems                                                     ="10"
                android:text                                                    ="@string/phone_number"
                android:textSize                                                ="14sp"
                app:layout_constraintBottom_toBottomOf                          ="parent"
                app:layout_constraintStart_toStartOf                            ="parent" />

            <TextView
                android:id="@+id/country_details_text_id"
                android:layout_width                                            ="63dp"
                android:layout_height                                           ="20dp"
                android:layout_marginStart                                      ="48dp"
                android:layout_marginBottom                                     ="76dp"
                android:ems                                                     ="10"
                android:text                                                    ="@string/country"
                android:textSize                                                ="14sp"
                app:layout_constraintBottom_toBottomOf                          ="parent"
                app:layout_constraintStart_toStartOf                            ="parent" />

            <TextView
                android:id="@+id/email_details_text_id"
                android:layout_width                                            ="59dp"
                android:layout_height                                           ="wrap_content"
                android:layout_marginStart                                      ="48dp"
                android:layout_marginBottom                                     ="124dp"
                android:ems                                                     ="10"
                android:text                                                    ="@string/email"
                android:textSize                                                ="14sp"
                app:layout_constraintBottom_toBottomOf                          ="parent"
                app:layout_constraintStart_toStartOf                            ="parent" />

            <TextView
                android:id                                                      ="@+id/gender_details_text_id"
                android:layout_width                                            ="72dp"
                android:layout_height                                           ="wrap_content"
                android:layout_marginStart                                      ="48dp"
                android:layout_marginBottom                                     ="28dp"
                android:ems                                                     ="10"
                android:text                                                    ="@string/gender"
                android:textSize                                                ="14sp"
                app:layout_constraintBottom_toBottomOf                          ="parent"
                app:layout_constraintStart_toStartOf                            ="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>